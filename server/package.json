{
  "name": "staccato-server",
  "version": "0.1.0",
  "private": true,
  "main": "build/server/src/server.js",
  "scripts": {
    "prebuild": "tslint -c ../tslint.json -p tsconfig.json --fix",
    "build": "tsc && cp package.json build/server/",
    "clean": "rm -rf ./build",
    "start": "cross-env NODE_ENV=development nodemon src/server.ts --watch server/* --ignore '**/*.test.ts'",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cfenv": "^1.2.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-csp-header": "^4.0.0",
    "helmet": "^4.0.0",
    "module-alias": "^2.2.2",
    "mysql2": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@types/cfenv": "^1.2.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/node": "^12.0.0",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "jest": "^24.9.0",
    "jest-junit": "^11.1.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts"
  }
}
